<div class="login-box">
  <div class="login-logo">
    <a href="/"><b>Admin</b>LTE</a>
  </div><!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Sign in to start your session</p>
    <%= form_tag({ controller: 'login', action: 'login' }, method: 'get') do %>
        <div class="form-group has-feedback">
          <%= text_field_tag(:login, nil, placeholder: 'Email or username', class: 'form-control', autofocus: true, required: true) %>
          <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>

        <div class="form-group has-feedback">
          <%= password_field_tag(:password, nil, placeholder: 'Password', class: 'form-control', autocomplete: 'off', required: true) %>
          <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="row">
          <div class="col-xs-8">
            <div class="checkbox icheck">
              <%= check_box_tag(:remember_me) %>
              Remember Me
            </div>
          </div><!-- /.col -->
          <div class="col-xs-4">
            <%= submit_tag 'Log in', class: 'btn btn-primary btn-block btn-flat' %>
          </div><!-- /.col -->
        </div>
    <% end %>

    <%= render partial: 'application/social_auth_links' %>

    <a href="#">I forgot my password</a><br>
    <a href="<%= url_for :controller => 'user', :action => 'new' %>" class="text-center">Register a new User</a>

  </div><!-- /.login-box-body -->
</div><!-- /.login-box -->

<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
